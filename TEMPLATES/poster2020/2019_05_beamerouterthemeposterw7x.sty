}
   %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
   % Definition der Hoehe der Logos
   %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
	\pgfdeclareimage[height=3.5cm]{LogoIPPW7X2}{w7x_white}
	\pgfdeclareimage[height=3.5cm]{LogoIPPASDEX}{asdex_white}
	\pgfdeclareimage[height=3.5cm]{LogoIPP}{ipp_logo_color}
	\pgfdeclareimage[height=.7cm]{LogoEurofusion}{EUROfusion-LOGO-PANTONE_REFL_BLUE}

   %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
   % Definition der Seite
   %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
	%% no extra frame title
	%
	\defbeamertemplate*{frametitle}{ipp theme}{}
	%
	%% Head
	\defbeamertemplate*{headline}{ipp theme}
	{%
      \vspace*{4ex}%
	  % Inhalt des oberen Kastens
		    %% Text MPI und Titel
			\hspace*{4ex}%
            \begin{minipage}[]{0.85\paperwidth}%
			%{\normalsize {\ippfont Max-Planck-Institut f{\"u}r Plasmaphysik}}\newline%
			{\normalsize Max-Planck-Institut f{\"u}r Plasmaphysik}\vspace*{2ex}\newline%
			\vfil%
			\textbf{\LARGE \textcolor{ipp2}{\inserttitle}}\vspace*{2ex}%
	        \end{minipage}\hfill%
	        %% Logo W7-X und IPP
            \begin{minipage}[]{0.10\paperwidth}%
              \includegraphics[width=0.45\textwidth]{w7x_white}\hfill%
              \includegraphics[width=0.45\textwidth]{ipp_logo_color}%
	        \end{minipage}\hspace*{4ex}\vspace*{2ex}\newline%
			%% Autoren 
            \hspace*{4ex}\begin{minipage}[t]{0.25\textwidth}%
              \normalsize\insertauthor %
	        \end{minipage}\hfill%
			%% Institute
            \begin{minipage}[t]{0.65\textwidth}%
			\begin{flushright}%
			  \normalsize\insertinstitute%
			\end{flushright}%
	        \end{minipage}\hspace*{4ex}%
            \vspace{4ex}
	       %%  Linie unter oberen Kasten
	        \hbox to\paperwidth{\pgfuseshading{beamer@topshade}}%
	}
	%% Footer
   \defbeamertemplate*{footline}{ipp theme}
   {%
    \leavevmode%
	       %% Linie ueber oberen Kasten
	        \hbox to\paperwidth{\pgfuseshading{beamer@topshade}}
	        \vspace*{4ex}%
           %% Author and Conference
            \begin{minipage}[]{0.30\paperwidth}
	          \hspace*{4ex}
		      * Coresponding author: \emailcorrespondingauthor\\[2ex]%
	          \hspace*{4ex}
              \nameconference		
	        \end{minipage}\hfill
           %% Text Eurofusion
            \begin{minipage}[]{0.50\paperwidth}
	          \acknowledgement
	        \end{minipage}\hfill
	       %% Logo Eurofusion
            \begin{minipage}[]{0.10\paperwidth}
	          \begin{flushright}%
                \includegraphics[width=\textwidth]{EUROfusion-LOGO-PANTONE_REFL_BLUE}
		      \end{flushright}%
	          \hspace*{4ex}
	       \end{minipage}\hspace{0.02\paperwidth}
  }%
